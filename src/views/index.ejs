<!doctype html>
<html lang="pt-BR">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>env-terminal-hacker</title>

  <style>
    :root {
      --bg: #000;
      --fg: #00ff66;
      --dim: rgba(0, 255, 102, 0.55);
      --bad: #ff3b3b;
      --ok: #00ff66;
      --panel: rgba(0, 255, 102, 0.08);
      --border: rgba(0, 255, 102, 0.25);
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      background: radial-gradient(1200px 800px at 30% 20%, rgba(0, 255, 102, 0.08), transparent 55%),
                  radial-gradient(900px 600px at 80% 70%, rgba(0, 255, 102, 0.06), transparent 55%),
                  var(--bg);
      color: var(--fg);
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      min-height: 100vh;
      overflow-x: hidden;
    }

    /* Scanlines / CRT vibe */
    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background:
        repeating-linear-gradient(
          to bottom,
          rgba(0, 0, 0, 0.0) 0px,
          rgba(0, 0, 0, 0.0) 2px,
          rgba(0, 0, 0, 0.14) 3px,
          rgba(0, 0, 0, 0.14) 4px
        );
      pointer-events: none;
      mix-blend-mode: multiply;
      opacity: 0.8;
    }

    .wrap {
      max-width: 1100px;
      margin: 0 auto;
      padding: 28px 18px 60px;
    }

    .top {
      display: flex;
      gap: 14px;
      align-items: flex-start;
      justify-content: space-between;
      flex-wrap: wrap;
      margin-bottom: 14px;
    }

    .brand {
      display: grid;
      gap: 6px;
    }

    .title {
      font-size: 20px;
      letter-spacing: 0.06em;
      text-transform: uppercase;
    }

    .subtitle {
      color: var(--dim);
      font-size: 13px;
      line-height: 1.4;
      max-width: 780px;
    }

    .chiprow {
      display: flex;
      gap: 8px;
      align-items: center;
      flex-wrap: wrap;
      justify-content: flex-end;
    }

    .chip {
      border: 1px solid var(--border);
      background: rgba(0, 255, 102, 0.05);
      padding: 7px 10px;
      border-radius: 10px;
      font-size: 12px;
      color: var(--fg);
      white-space: nowrap;
    }

    .chip strong {
      font-weight: 700;
    }

    .panel {
      border: 1px solid var(--border);
      background: var(--panel);
      border-radius: 16px;
      padding: 16px;
      box-shadow: 0 0 0 1px rgba(0, 255, 102, 0.06), 0 18px 40px rgba(0, 0, 0, 0.55);
      position: relative;
      overflow: hidden;
    }

    .panel::after {
      content: "";
      position: absolute;
      inset: -120px -120px auto auto;
      width: 240px;
      height: 240px;
      background: radial-gradient(circle, rgba(0, 255, 102, 0.12), transparent 62%);
      pointer-events: none;
    }

    .controls {
      display: flex;
      gap: 10px;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      margin-bottom: 12px;
    }

    .search {
      flex: 1;
      min-width: 260px;
      display: flex;
      align-items: center;
      gap: 8px;
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 10px 12px;
      background: rgba(0, 0, 0, 0.25);
    }

    .search input {
      width: 100%;
      background: transparent;
      border: none;
      outline: none;
      color: var(--fg);
      font-family: inherit;
      font-size: 13px;
    }

    .btn {
      border: 1px solid var(--border);
      background: rgba(0, 255, 102, 0.06);
      color: var(--fg);
      border-radius: 12px;
      padding: 10px 12px;
      font-family: inherit;
      font-size: 12px;
      cursor: pointer;
      transition: transform 120ms ease, background 120ms ease;
    }

    .btn:hover { transform: translateY(-1px); }
    .btn:active { transform: translateY(0px); }

    .divider {
      height: 1px;
      background: rgba(0, 255, 102, 0.18);
      margin: 12px 0;
    }

    .sectionTitle {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
      margin: 14px 0 8px;
      color: var(--dim);
      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-size: 12px;
    }

    .sectionTitle .hint {
      text-transform: none;
      letter-spacing: 0;
      font-size: 12px;
      color: rgba(0, 255, 102, 0.42);
    }

    .lines {
      display: grid;
      gap: 6px;
    }

    .line {
      display: grid;
      grid-template-columns: 52px 1fr;
      gap: 10px;
      align-items: baseline;
      padding: 8px 10px;
      border-radius: 12px;
      background: rgba(0, 0, 0, 0.22);
      border: 1px solid rgba(0, 255, 102, 0.12);
    }

    .badge {
      font-size: 11px;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      opacity: 0.95;
      text-align: center;
      border-radius: 10px;
      padding: 4px 6px;
      border: 1px solid rgba(0, 255, 102, 0.25);
      background: rgba(0, 255, 102, 0.05);
      user-select: none;
    }

    .line.missing {
      border-color: rgba(255, 59, 59, 0.25);
      background: rgba(255, 59, 59, 0.04);
    }

    .line.missing .badge {
      border-color: rgba(255, 59, 59, 0.35);
      color: var(--bad);
      background: rgba(255, 59, 59, 0.05);
    }

    .kv {
      display: inline;
      white-space: pre-wrap;
      word-break: break-word;
      line-height: 1.35;
      font-size: 13px;
    }

    .kv .k {
      color: var(--fg);
      font-weight: 700;
    }

    .kv .eq { color: rgba(0, 255, 102, 0.65); }

    .kv .v {
      color: rgba(0, 255, 102, 0.9);
    }

    .line.missing .kv .v {
      color: rgba(255, 59, 59, 0.9);
    }

    .footer {
      margin-top: 12px;
      color: rgba(0, 255, 102, 0.45);
      font-size: 12px;
      line-height: 1.45;
    }

    .cursor {
      display: inline-block;
      width: 10px;
      height: 16px;
      background: rgba(0, 255, 102, 0.75);
      margin-left: 6px;
      transform: translateY(3px);
      animation: blink 1s steps(2) infinite;
    }

    @keyframes blink {
      0% { opacity: 0; }
      50% { opacity: 1; }
      100% { opacity: 0; }
    }
  </style>
</head>

<body>
  <div class="wrap">
    <div class="top">
      <div class="brand">
        <div class="title">ENV TERMINAL / BLACKBOX<span class="cursor"></span></div>
        <div class="subtitle">
          Dump de variáveis de ambiente para validar ConfigMap/env/Secret no Kubernetes.
          Ausente/vazia = <strong><%= notFoundMsg %></strong>.
          <%= redacting ? 'Secrets estão mascarados (APP_REDACT_SECRETS=true).' : 'Secrets estão visíveis (APP_REDACT_SECRETS=false).' %>
        </div>
      </div>
      <div class="chiprow">
        <div class="chip"><strong>host</strong>: <%= meta.hostname %></div>
        <div class="chip"><strong>node</strong>: <%= meta.node %></div>
        <div class="chip"><strong>pid</strong>: <%= meta.pid %></div>
        <div class="chip"><strong>uptime</strong>: <%= meta.uptimeSec %>s</div>
        <div class="chip"><strong>ts</strong>: <%= meta.timestamp %></div>
      </div>
    </div>

    <div class="panel">
      <div class="controls">
        <div class="search">
          <span style="color: var(--dim);">grep</span>
          <input id="filter" placeholder="filtrar por chave/valor... (ex: APP_DB ou LEAK_)" autocomplete="off" />
        </div>
        <button class="btn" id="copy">copiar dump</button>
        <button class="btn" id="toggleMissing">mostrar só erros</button>
      </div>

      <div class="divider"></div>

      <div class="sectionTitle">
        <span>CONFIGMAP / ENV</span>
        <span class="hint">chaves não sensíveis (esperadas)</span>
      </div>

      <div class="lines" id="lines-config">
        <% fixed.filter(v => v.group === 'config').forEach(function(v){ %>
          <div class="line <%= v.status %>" data-key="<%= v.key %>" data-value="<%= v.value %>">
            <div class="badge"><%= v.status === 'ok' ? 'ok' : 'err' %></div>
            <div class="kv"><span class="k"><%= v.key %></span><span class="eq">=</span><span class="v"><%= v.value %></span></div>
          </div>
        <% }) %>
      </div>

      <div class="sectionTitle" style="margin-top: 18px;">
        <span>SECRETS</span>
        <span class="hint">chaves sensíveis (esperadas)</span>
      </div>

      <div class="lines" id="lines-secret">
        <% fixed.filter(v => v.group === 'secret').forEach(function(v){ %>
          <div class="line <%= v.status %>" data-key="<%= v.key %>" data-value="<%= v.value %>">
            <div class="badge"><%= v.status === 'ok' ? 'ok' : 'err' %></div>
            <div class="kv"><span class="k"><%= v.key %></span><span class="eq">=</span><span class="v"><%= v.value %></span></div>
          </div>
        <% }) %>
      </div>

      <div class="sectionTitle" style="margin-top: 18px;">
        <span>EXTRAS (AUTO-DETECT)</span>
        <span class="hint">APP_*/LEAK_* detectadas no runtime</span>
      </div>

      <div class="lines" id="lines-extra">
        <% if (!extras || extras.length === 0) { %>
          <div class="line ok" data-key="(none)" data-value="">
            <div class="badge">ok</div>
            <div class="kv"><span class="k">#</span><span class="eq"> </span><span class="v">nenhuma variável extra detectada</span></div>
          </div>
        <% } %>

        <% (extras || []).forEach(function(v){ %>
          <div class="line <%= v.status %>" data-key="<%= v.key %>" data-value="<%= v.value %>">
            <div class="badge"><%= v.status === 'ok' ? 'ok' : 'err' %></div>
            <div class="kv"><span class="k"><%= v.key %></span><span class="eq">=</span><span class="v"><%= v.value %></span></div>
          </div>
        <% }) %>
      </div>

      <div class="footer">
        Dica: deixe valores vazios no ConfigMap/Secret (ou remova a chave) para ver o erro.
        Para consumir o dump via automação, use <strong>/api/env</strong>.
      </div>
    </div>
  </div>

  <script>
    (function () {
      const filter = document.getElementById('filter');
      const copyBtn = document.getElementById('copy');
      const toggleMissingBtn = document.getElementById('toggleMissing');
      const lines = Array.from(document.querySelectorAll('.line'));
      let onlyMissing = false;

      function normalize(s) {
        return (s || '').toString().toLowerCase();
      }

      function apply() {
        const q = normalize(filter.value);

        lines.forEach((el) => {
          const key = normalize(el.getAttribute('data-key'));
          const value = normalize(el.getAttribute('data-value'));
          const isMissing = el.classList.contains('missing');

          const matchesText = !q || key.includes(q) || value.includes(q);
          const matchesMissing = !onlyMissing || isMissing;

          el.style.display = (matchesText && matchesMissing) ? '' : 'none';
        });
      }

      filter.addEventListener('input', apply);

      toggleMissingBtn.addEventListener('click', () => {
        onlyMissing = !onlyMissing;
        toggleMissingBtn.textContent = onlyMissing ? 'mostrar tudo' : 'mostrar só erros';
        apply();
      });

      copyBtn.addEventListener('click', async () => {
        const visible = lines.filter((el) => el.style.display !== 'none');
        const text = visible
          .map((el) => {
            const key = el.getAttribute('data-key');
            const value = el.getAttribute('data-value');
            const status = el.classList.contains('missing') ? 'ERR' : 'OK';
            return `[${status}] ${key}=${value}`;
          })
          .join('\n');

        try {
          await navigator.clipboard.writeText(text);
          copyBtn.textContent = 'copiado!';
          setTimeout(() => (copyBtn.textContent = 'copiar dump'), 900);
        } catch (e) {
          copyBtn.textContent = 'falha ao copiar';
          setTimeout(() => (copyBtn.textContent = 'copiar dump'), 1200);
        }
      });

      apply();
    })();
  </script>
</body>

</html>
